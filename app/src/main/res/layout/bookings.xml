<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historyUserTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/check_usernameTxt" />

        <TextView
            android:id="@+id/historyUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/historyUserTxt"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/check_username" />

        <TextView
            android:id="@+id/historyRoomTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyUserTxt"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/check_roomTxt" />

        <TextView
            android:id="@+id/historyRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyUser"
            android:layout_toEndOf="@id/historyRoomTxt"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/check_room" />

        <TextView
            android:id="@+id/historyDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyRoomTxt"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/check_dateTxt" />

        <TextView
            android:id="@+id/historyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyRoom"
            android:layout_toEndOf="@id/historyDateTxt"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/check_date" />

        <TextView
            android:id="@+id/historyDurationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyDateTxt"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/check_durationTxt" />

        <TextView
            android:id="@+id/historyDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyDate"
            android:layout_toEndOf="@id/historyDurationTxt"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/check_duration" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>